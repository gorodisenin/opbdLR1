import tkinter as tk
from tkinter import filedialog

def open_file():
    file_path = filedialog.askopenfilename()
    if file_path:
        with open(file_path, 'r', encoding='utf-8') as file:
            content = file.read()
            multiline_text.delete('1.0', tk.END)  
            multiline_text.insert(tk.END, content)  

def save_file():
    file_name = singleline_text.get()
    if file_name:
        with open(file_name, 'w', encoding='utf-8') as file:
            content = multiline_text.get('1.0', tk.END)
            file.write(content)

root = tk.Tk()
root.title("Текстовый редактор")

singleline_text = tk.Entry(root)
singleline_text.pack(fill='x', padx=5, pady=5)

multiline_text = tk.Text(root)
multiline_text.pack(fill='both', expand=True, padx=5, pady=5)

open_button = tk.Button(root, text="Открыть", command=open_file)
open_button.pack(side=tk.LEFT, padx=5, pady=5)

save_button = tk.Button(root, text="Сохранить", command=save_file)
save_button.pack(side=tk.RIGHT, padx=5, pady=5)

root.mainloop()
