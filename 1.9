import tkinter as tk

root = tk.Tk()
root.title("Домик с солнышком и травой")

canvas = tk.Canvas(root, width=400, height=300)
canvas.pack()

def draw_house(x, y, width, height):
    canvas.create_rectangle(x, y, x + width, y + height, fill='dark blue')
    canvas.create_polygon(x, y, x + width, y, x + width / 2, y - height / 2, fill='blue')

def draw_sun(x, y, radius):
    canvas.create_oval(x - radius, y - radius, x + radius, y + radius, fill='yellow')

def draw_grass(x, y, width, height):
    canvas.create_rectangle(x, y, x + width, y + height, fill='green')

draw_house(50, 150, 100, 150)

draw_sun(350, 50, 30)

draw_grass(0, 250, 400, 50)

root.mainloop()
